# Database Configuration
# Choose one database type: sqlite, mysql, or mongodb
DB_TYPE=sqlite

# SQLite Configuration
# For SQLite, just specify the database name or full path
# Examples: invoices, /path/to/invoices.db, database/invoices.db
DB_DATABASE=invoices

# MySQL Configuration
# Uncomment and configure these for MySQL
# DB_TYPE=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_DATABASE=invoices
# DB_USERNAME=root
# DB_PASSWORD=

# MongoDB Configuration
# Uncomment and configure these for MongoDB
# DB_TYPE=mongodb
# DB_HOST=localhost
# DB_PORT=27017
# DB_DATABASE=invoices
# DB_USERNAME=
# DB_PASSWORD=
# DB_AUTHENTICATION_DATABASE=admin

# Application Configuration
APP_NAME="Invoice Processor"
APP_ENV=development
APP_DEBUG=true

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=8000

